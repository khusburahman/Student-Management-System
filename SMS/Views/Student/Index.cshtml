@model IEnumerable<SMS.Models.Student>
@{
    int IdNo = 1;

}


<a asp-action="CreateOrEdit" asp-controller="Student" class="btn btn-sm btn-success">Create Student</a>
<div class="container">
    <div class="row">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x=>x.Id)</th>
                    <th>@Html.DisplayNameFor(x => x.Name)</th>
                    <th>@Html.DisplayNameFor(x => x.Address)</th>
                    <th>@Html.DisplayNameFor(x => x.Email)</th>
                    <th>@Html.DisplayNameFor(x => x.Phone)</th>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@IdNo</td>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        
                        <td>
                            <a asp-action="CreateOrEdit"asp-controller="Student" asp-route-id="@item.Id" class="btn btn-sm btn-success">Edit</a>
                            <a asp-action="Delete"asp-controller="Student" asp-route-id="@item.Id" onclick="return confirm('Are you sure Delete this item?')" class="btn btn-sm btn-danger">Delete</a>
                            <a asp-action="Details" asp-controller="Student" asp-route-Id="@item.Id" class="btn btn-sm btn-primary">Details</a>
                        </td>
                        
                    </tr>
                    IdNo++;
                }
                
            </tbody>

        </table>

    </div>

</div>